<div class="well">
  <%= render 'shared/form_errors', object: @user %>

  <%= form_for @user do |f| %>
    <div class="control-group">
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>

    <div class="control-group">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <div class="control-group">
      <%= f.label :time_zone %>
      <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.country_zones('PH') %>
    </div>

    <div class="control-group">
      <%= f.label :phone %>
      <%= f.text_field :phone %>
    </div>

    <% if @user.new_record? %>
      <%= f.submit "Register", class: "btn btn-success" %>
    <% else %>
      <%= f.submit "Update Profile", class: "btn btn-success" %>
    <% end %>

  <% end %>
</div>
